{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "../target/types/**/*.d.ts" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}